{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "box-of-gifts",
  "version": "0.1.0",
  "identifier": "com.boxofgifts.roulette",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Box of Gifts - Roulette Wheel",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": true,
        "alwaysOnTop": false,
        "backgroundColor": "#1a1a2e"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
